          </div>

          <!-- CAREERS -->
          <div id="careers" class="mb-5">
            <h2 class="text-primary fw-bold mb-4">Careers at Make-A-Wish</h2>
            <p class="fs-5">Want to help create life-changing wishes every day? Join our passionate team!</p>
            <a href="mailto:careers@Make-A-Wish.org" class="btn btn-wish btn-lg">View Open Positions</a>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script>
    // Highlight active section in side nav
    window.addEventListener('scroll', () => {
      document.querySelectorAll('div[id]').forEach(section => {
        const rect = section.getBoundingClientRect();
        if (rect.top >= 0 && rect.top <= 300) {
          document.querySelectorAll('.about-nav a').forEach(a => a.classList.remove('active'));
          document.querySelector(`a[href="#${section.id}"]`).classList.add('active');
        }
      });
    });
  </script>
</body>
</html>