<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<body>
  <%- include('partials/navbar') %>

  <section class="py-5 bg-light">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-9">
          <h1 class="text-center mb-3 display-5 fw-bold text-primary">Your Gift Grants Wishes</h1>
          <p class="text-center lead mb-5">Choose how you'd like to donate — every dollar helps a child</p>

          <!-- TABS -->
          <ul class="nav nav-pills nav-fill mb-5 shadow-sm rounded" id="paymentTabs">
            <li class="nav-item">
              <button class="nav-link active fs-5 py-3" data-bs-toggle="pill" data-bs-target="#crypto">Crypto (BTC / USDT)</button>
            </li>
            <li class="nav-item">
              <button class="nav-link fs-5 py-3" data-bs-toggle="pill" data-bs-target="#giftcard">Gift Cards</button>
            </li>
          </ul>

          <div class="tab-content bg-white p-5 rounded shadow">

            <!-- CRYPTO TAB -->
            <div class="tab-pane fade show active" id="crypto">
              <div class="text-center">
                <h3 class="mb-4">Donate with Cryptocurrency</h3>
                <p class="text-success lead mb-4">100% goes to granting wishes • Instant & Secure</p>

                <!-- SPECIAL CHRISTMAS MESSAGE + PROOF REQUEST -->
                <div class="alert alert-success mt-5 p-4 rounded shadow-lg border-0">
                  <h4 class="alert-heading text-success">
                    Special Christmas Thank You!
                  </h4>
                  <p class="mb-3">
                    This holiday season, every donor who gives <strong>1,000 USDT or more</strong> will receive a <strong>beautiful personalized Christmas thank-you gift</strong> from our wish kids and team — including a heartfelt video message and a digital certificate of impact.
                  </p>
                  <hr>
                  <p class="mb-0">
                    After sending your crypto donation, please forward the <strong>transaction hash/receipt</strong> to:<br>
                    <strong class="text-primary">makeawishfoundationworld@outlook.com</strong><br>
                    We’ll confirm within hours and send your special gift before Christmas!
                  </p>
                </div>

                <!-- BTC -->
                <div class="p-4 border rounded mb-5 bg-light">
                  <h5 class="mb-3">Bitcoin (BTC)</h5>
                  <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap">
                    <code class="bg-white p-3 rounded selectable" id="btcAddress">bc1qv3dh9zn524ekhe0f4q2vcyx3evwgquxy6sztzz</code>
                    <button onclick="copyOne('btcAddress')" class="btn btn-success btn-sm">
                      <i class="bi bi-clipboard"></i> Copy
                    </button>
                  </div>
                  <!-- <img src="/img/qr-btc.png" class="img-fluid mt-4 rounded shadow" style="max-height:240px;" alt="BTC QR Code"> -->
                </div>

                <!-- USDT TRC20 -->
                <div class="p-4 border rounded bg-light">
                  <h5 class="mb-3">USDT (TRC20 – Lowest fees)</h5>
                  <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap">
                    <code class="bg-white p-3 rounded selectable" id="usdtAddress">TMdHG2FG58gG2ibzjxiyMDCLGirZGD4WBU</code>
                    <button onclick="copyOne('usdtAddress')" class="btn btn-success btn-sm">
                      <i class="bi bi-clipboard"></i> Copy
                    </button>
                  </div>
                  <!-- <img src="/img/qr-usdt.png" class="img-fluid mt-4 rounded shadow" style="max-height:240px;" alt="USDT QR Code"> -->
                </div>

              </div>
            </div>

            <!-- GIFT CARD TAB -->
            <div class="tab-pane fade" id="giftcard">
              <div class="text-center py-5">
                <h2 class="text-success mb-4">Donate with Unused Gift Cards</h2>
                <p class="lead mb-4">Turn your unused gift cards into life-changing wishes!</p>
                <h5 class="text-primary mb-4">We accept:</h5>
                <h4 class="mb-5">
                  Amazon • Visa • Mastercard • Walmart • Target • Starbucks<br>
                  iTunes • Google Play • Steam • Roblox • PlayStation • Xbox
                </h4>
                <div class="bg-light p-5 rounded shadow mx-auto" style="max-width:600px;">
                  <h4 class="mb-3">Email the details to:</h4>
                  <h3 class="text-success mb-4 text-break" style="word-break:break-all;">
                    makeawishfoundationworld@outlook.com
                  </h3>
                  <button onclick="copyEmail()" class="btn btn-outline-success btn-sm mb-3">
                    <i class="bi bi-clipboard"></i> Copy Email
                  </button>
                  <p class="text-muted mb-2">Please include:</p>
                  <p class="text-muted fw-bold">Brand • Amount • Card Number • PIN (if any)</p>
                  <p class="text-success mt-4 fs-5"><strong>We’ll confirm within 24 hours!</strong></p>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    function copyOne(id) {
      const text = document.getElementById(id).textContent;
      navigator.clipboard.writeText(text).then(() => {
        alert("Copied:\n" + text);
      });
    }

    function copyEmail() {
      navigator.clipboard.writeText("makeawishfoundationworld@outlook.com");
      alert("Email copied!");
    }

    document.querySelectorAll('code.selectable').forEach(el => {
      el.style.cursor = "pointer";
      el.title = "Click to copy";
      el.onclick = () => copyOne(el.id);
    });
  </script>

  <style>
    code.selectable { user-select: all; font-size: 1.1rem; word-break: break-all; }
    @media (max-width: 576px) {
      .d-flex.gap-3 { flex-direction: column; }
      button.btn-sm { width: 100%; }
    }
  </style>

  <%- include('partials/footer') %>
</body>
</html>