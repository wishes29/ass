  .timeline-item { margin-bottom:40px; position:relative; }
  .timeline-item::before { content:''; position:absolute; left:-12px; top:8px; width:20px; height:20px; background:#00a7e1; border-radius:50%; border:5px solid white; box-shadow:0 0 0 4px #00a7e1; }
