<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>

  <section class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h1 class="text-center mb-5">Get in Touch</h1>
          <form action="/contact" method="POST" class="card p-5 shadow">
            <div class="row">
              <div class="col-md-6 mb-3"><input type="text" name="name" class="form-control" placeholder="Your Name *" required></div>
              <div class="col-md-6 mb-3"><input type="email" name="email" class="form-control" placeholder="Email *" required></div>
            </div>
            <div class="mb-3"><input type="text" name="subject" class="form-control" placeholder="Subject *" required></div>
            <div class="mb-3"><textarea name="message" class="form-control" rows="5" placeholder="Your Message *" required></textarea></div>
            <div class="text-center"><button type="submit" class="btn btn-wish btn-lg">Send Message</button></div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>